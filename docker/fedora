FROM fedora:DOCKER_DIST_VERSION

# Copy repository contents into Docker image
COPY . /openhoi

# Set working directory
WORKDIR /openhoi

# Install lsb-release
RUN yum -y update && yum -y install redhat-lsb yum-utils && package-cleanup --leaves --all

# Run package script
RUN chmod +x package
ENTRYPOINT ["./package"]